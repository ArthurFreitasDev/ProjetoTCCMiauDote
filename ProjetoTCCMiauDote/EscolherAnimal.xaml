<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCCMiauDote.EscolherAnimal"
             Title="EscolherAnimal"
             Shell.BackgroundColor="#6C3CCB"
             BackgroundColor="White">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <Style  TargetType="Frame">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommunStates">
                        <VisualState x:Name="Normal"/>

                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="#6C3CCB"/>
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    
    <ScrollView MinimumHeightRequest="200">
        <VerticalStackLayout>
            <SearchBar x:Name="txt_search" Placeholder="Buscar por nome" TextChanged="txt_search_TextChanged"/>
            <ListView x:Name="lst_animais_EscolherAnimal"
                      HasUnevenRows="True"
                      RowHeight="200" SelectionMode="Single"
                      ItemSelected="lst_animais_ItemSelected"
                      RefreshControlColor="Black">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#6C3CCB" CornerRadius="20" Margin="30" WidthRequest="320" HeightRequest="200">
                                <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*">
                                    <Image Source="{Binding Foto}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="7" Grid.ColumnSpan="3"/>
                                    <Label Text="{Binding Nome}" Grid.Row="0" Grid.Column="3" FontSize="20" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
                                    <Label Text="Descrição" Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="3" FontSize="20" Margin="10,0,0,0"/>
                                    <ScrollView Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="3" Grid.RowSpan="5">
                                        <Label Text="{Binding Descricao}"  Margin="10,0,0,0" FontSize="20"/>
                                    </ScrollView>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
    <Shell.TitleView>
        <StackLayout HorizontalOptions="Fill">
            <Grid ColumnDefinitions="3*,*">
                <Image Source="Resources/Images/logonome.png" WidthRequest="160" Grid.Column="0"/>
                <Image Source="Resouces/Images/Logo.png" WidthRequest="50" Grid.Column="1" Margin="20,0,0,0"/>
            </Grid>
        </StackLayout>
    </Shell.TitleView>
</ContentPage>