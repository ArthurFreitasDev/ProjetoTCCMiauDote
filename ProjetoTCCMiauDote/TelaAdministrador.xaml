<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCCMiauDote.TelaAdministrador"
             Title="TelaAdministrador"
             Shell.BackgroundColor="#6C3CCB"
             BackgroundColor="White">
    <StackLayout Margin="0,80,0,0">
        <Grid RowDefinitions="*,*,*,*,*,*" >
            <Button Text="Adicionar Funcionário" Clicked="AdicionarFuncionario_click" Grid.Row="0" BackgroundColor="#6C3CCB" TextColor="White" FontSize="15" WidthRequest="250" Margin="0,0,0,50" VerticalOptions="Center"/>
            <Button Text="Adicionar Animal" Clicked="AdicionarAnimal_click"  Grid.Row="1" BackgroundColor="#6C3CCB" TextColor="White" FontSize="15" WidthRequest="250" Margin="0,0,0,50" VerticalOptions="Center"/>
            <Button Text="Relatórios" Clicked="Registros_Clicked" Grid.Row="2" BackgroundColor="#6C3CCB" TextColor="White" FontSize="15" WidthRequest="250" Margin="0,0,0,50" VerticalOptions="Center"/>
            <Button Text="Status Adoção" Clicked="EstadoAdocaoFuncionarios_Clicked" Grid.Row="3" BackgroundColor="#6C3CCB" TextColor="White" FontSize="15" WidthRequest="250" Margin="0,0,0,50" VerticalOptions="Center"/>
            <Button Text="Adicionar Abrigo" x:Name="btnAdicionarAbrigo" Clicked="AdicionarAbrigo_Clicked" Grid.Row="4" BackgroundColor="#6C3CCB" TextColor="White" FontSize="15" WidthRequest="250" Margin="0,0,0,50" VerticalOptions="Center"/>
        </Grid>
    </StackLayout>

    <Shell.TitleView>
        <StackLayout HorizontalOptions="Fill">
            <Grid ColumnDefinitions="3*,*">
                <Image Source="Resources/Images/logonome.png" WidthRequest="160" Grid.Column="0"/>
                <Image Source="Resouces/Images/Logo.png" WidthRequest="50" Grid.Column="1" Margin="20,0,0,0"/>
            </Grid>
        </StackLayout>
    </Shell.TitleView>
</ContentPage>