<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjetoTCCMiauDote.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjetoTCCMiauDote"
    Shell.FlyoutBehavior="Flyout"
    Title="ProjetoTCCMiauDote"
    Loaded="Shell_Loaded">


    <FlyoutItem Title="Home">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
    </FlyoutItem>
    <FlyoutItem Title="Cadastro" x:Name="FlyoutCadastro">
        <ShellContent Title="Cadastro" ContentTemplate="{DataTemplate local:CriarConta}" Route="CriarConta"/>
    </FlyoutItem>
    <FlyoutItem Title="Login" x:Name="FlyoutLogin">
        <ShellContent Title="Login" ContentTemplate="{DataTemplate local:Login}" Route="Login"/>
    </FlyoutItem>
    <FlyoutItem Title="Status Adoção">
        <ShellContent Title="Estado Adoção" ContentTemplate="{DataTemplate local:EstadoAdocao}"/>
    </FlyoutItem>
    <FlyoutItem Title="Tela Administrador" x:Name="TelaAdministrador">
        <ShellContent Title="Tela Administrador" ContentTemplate="{DataTemplate local:TelaAdministrador}"/>
    </FlyoutItem>
    <FlyoutItem Title="Logout" x:Name="FlyoutLogout">
        <ShellContent Title="Logout" ContentTemplate="{DataTemplate local:Logout}"/>
    </FlyoutItem>


</Shell>
